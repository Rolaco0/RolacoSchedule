<Window x:Class="RolacoSchedule.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RolacoSchedule"
        Title="Rolaco Schedule"
        Height="800" Width="1300"
        WindowStartupLocation="CenterScreen"
        Background="#0A0A0A"
        WindowStyle="None"
        AllowsTransparency="True"
        BorderThickness="1"
        BorderBrush="#2A2A2A"
        Icon="logo.ico">
    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
        <Color x:Key="PrimaryDark">#0A0A0A</Color>
        <Color x:Key="SecondaryDark">#141414</Color>
        <Color x:Key="AccentGold">#FFD700</Color>
        <Color x:Key="AccentGoldLight">#FFE55C</Color>
        <Color x:Key="ErrorRed">#FF6B6B</Color>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentGold}"/>
        <SolidColorBrush x:Key="AccentLightBrush" Color="{StaticResource AccentGoldLight}"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorRed}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="#888888"/>
        <Style x:Key="SimpleButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="AccentSimpleButton" BasedOn="{StaticResource SimpleButton}" TargetType="Button">
            <Setter Property="Background" Value="#FFD700"/>
            <Setter Property="Foreground" Value="#0A0A0A"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE55C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="IconSimpleButton" BasedOn="{StaticResource SimpleButton}" TargetType="Button">
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style x:Key="TimerComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border x:Name="Border"
                                    Grid.Row="0"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ToggleButton x:Name="DropDownToggle"
                                                Grid.Column="0"
                                                Grid.ColumnSpan="2"
                                                Background="Transparent"
                                                BorderBrush="Transparent"
                                                IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                IsHitTestVisible="True">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="Transparent"/>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>
                                    <ContentPresenter x:Name="ContentSite"
                                                      Grid.Column="0"
                                                      Margin="{TemplateBinding Padding}"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"
                                                      IsHitTestVisible="False">
                                        <ContentPresenter.Resources>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="FontSize" Value="14"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </Style>
                                        </ContentPresenter.Resources>
                                    </ContentPresenter>
                                    <Path x:Name="Arrow"
                                          Grid.Column="1"
                                          Margin="0,0,15,0"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center"
                                          Fill="#888888"
                                          Data="M0,0 L6,6 L12,0"
                                          IsHitTestVisible="False"/>
                                </Grid>
                            </Border>
                            <Popup x:Name="Popup"
                                   Grid.Row="1"
                                   Placement="Bottom"
                                   IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                   AllowsTransparency="True"
                                   PopupAnimation="Slide"
                                   VerticalOffset="5">
                                <Border x:Name="DropDownBorder"
                                        Background="#1E1E1E"
                                        BorderBrush="#FFD700"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Width="{Binding ActualWidth, ElementName=Border}">
                                    <ScrollViewer>
                                        <ItemsPresenter x:Name="ItemsPresenter"
                                                      KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FFD700"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FFD700"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="#FFD700"/>
                                <Setter TargetName="Arrow" Property="Data" Value="M0,6 L6,0 L12,6 Z"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DurationComboBox" TargetType="ComboBox" BasedOn="{StaticResource TimerComboBox}">
            <Setter Property="Width" Value="100"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="LinkTaskComboBox" TargetType="ComboBox" BasedOn="{StaticResource TimerComboBox}">
            <Setter Property="Width" Value="300"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="TimerComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Margin="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="ContentPresenter"
                                            Content="{TemplateBinding Content}"
                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FFD700"/>
                                <Setter Property="Foreground" Value="#0A0A0A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border Background="#0A0A0A">
        <Grid>
            <Border x:Name="notificationOverlay" 
                    Background="#CC0A0A0A" 
                    Visibility="Collapsed"
                    Panel.ZIndex="1000">
                <Border Width="400" Height="200"
                        Background="#1A1A1A"
                        CornerRadius="10"
                        BorderBrush="#FFD700"
                        BorderThickness="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                        <TextBlock Text="â°" FontSize="40" Foreground="#FFD700" HorizontalAlignment="Center"/>
                        <TextBlock Text="Time's Up!" FontSize="20" FontWeight="Bold" Foreground="#FFD700" Margin="0,10"/>
                        <Button Content="OK" Width="80" Height="35" 
                                Background="#FFD700" Foreground="#0A0A0A" 
                                FontWeight="Bold" Margin="0,10"
                                Click="CloseNotification_Click"/>
                    </StackPanel>
                </Border>
            </Border>
            <Border x:Name="dragArea"
                    Height="30"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    MouseLeftButtonDown="DragArea_MouseLeftButtonDown"
                    Panel.ZIndex="999"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Background="#0F0F0F">
                    <StackPanel>
                        <Border Height="150" Background="#0A0A0A">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="ROLACO" FontSize="28" FontWeight="Light" 
                                         Foreground="#FFD700" HorizontalAlignment="Center"/>
                                <TextBlock Text="SCHEDULE" FontSize="14" 
                                         Foreground="#888888" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <StackPanel Margin="20">
                            <TextBlock Text="MENU" Foreground="#888888" FontSize="12" FontWeight="Bold" Margin="0,0,0,15"/>
                            <Button x:Name="btnTasks" Content="TASKS" 
                                    Style="{StaticResource SimpleButton}"
                                    HorizontalContentAlignment="Left" Padding="15,0"
                                    Click="btnTasks_Click"/>
                            <Button x:Name="btnTimer" Content="TIMER" 
                                    Style="{StaticResource SimpleButton}"
                                    HorizontalContentAlignment="Left" Padding="15,0" Margin="0,5"
                                    Click="btnTimer_Click"/>
                        </StackPanel>
                        <Border Margin="20" Padding="15"
                                Background="#1A1A1A" CornerRadius="10"
                                BorderBrush="#FFD700" BorderThickness="0,0,0,3"
                                Visibility="{Binding TimerActive, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="ACTIVE SESSION" Foreground="#FFD700" FontSize="10" FontWeight="Bold"/>
                                <TextBlock x:Name="txtCurrentTimer" Text="00:00" 
                                         Foreground="White" FontSize="30" FontWeight="Thin"/>
                                <TextBlock x:Name="txtTimerTask" Text="No active task" 
                                         Foreground="#888888" FontSize="11"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
                <Grid Grid.Column="1" Background="#0A0A0A">
                    <Border x:Name="viewTasks" Visibility="Visible">
                        <Grid Margin="30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="TASKS" FontSize="12" FontWeight="Bold" Foreground="#888888"/>
                                <TextBlock Grid.Column="0" Text="Manage Your Task" 
                                         FontSize="28" FontWeight="Light" Foreground="White" Margin="0,20,0,0"/>
                                <Button Grid.Column="1" Content="+ NEW TASK" 
                                        Style="{StaticResource AccentSimpleButton}" Width="120"
                                        VerticalAlignment="Bottom" Click="ShowAddTaskDialog"/>
                            </Grid>
                            <ScrollViewer Grid.Row="1">
                                <ItemsControl x:Name="taskList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#1A1A1A" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <Border Width="8" Height="8" 
                                                                    Background="{Binding IsActive, Converter={StaticResource BoolToBrushConverter}}"
                                                                    CornerRadius="4" Margin="0,5,10,0" VerticalAlignment="Top"/>
                                                            <TextBlock Text="{Binding Title}" Foreground="White" FontSize="16" FontWeight="SemiBold"/>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding Description}" Foreground="#CCCCCC" FontSize="13" 
                                                                 Margin="0,5" TextWrapping="Wrap"/>
                                                        <Border Background="#2A2A2A" CornerRadius="15" Padding="10,5" Margin="0,5">
                                                            <TextBlock Text="{Binding Duration}" Foreground="#CCCCCC" FontSize="11"/>
                                                        </Border>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                        <Button Content="START" 
                                                                Width="70" Height="32"
                                                                Background="#FFD700" Foreground="#0A0A0A"
                                                                FontSize="11" FontWeight="Bold"
                                                                Click="StartTaskTimer_Click" Tag="{Binding Id}"/>
                                                        <Button Content="âœŽ" Style="{StaticResource IconSimpleButton}"
                                                                Margin="5,0,0,0" Click="ShowEditTaskDialog" Tag="{Binding Id}"/>
                                                        <Button Content="Ã—" Style="{StaticResource IconSimpleButton}"
                                                                Foreground="#FF6B6B" FontSize="18"
                                                                Margin="5,0,0,0" Click="DeleteTask_Click" Tag="{Binding Id}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                    <Border x:Name="viewTimer" Visibility="Collapsed">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="30" HorizontalAlignment="Center" Width="600">
                                <TextBlock Text="FOCUS TIMER" 
                                         FontSize="14" FontWeight="Bold"
                                         Foreground="#FFD700" 
                                         HorizontalAlignment="Center" Margin="0,0,0,30"/>
                                <Border Background="#1A1A1A" 
                                        CornerRadius="20" 
                                        Padding="40" 
                                        Margin="0,0,0,30">
                                    <StackPanel>
                                        <TextBlock x:Name="txtTimerDisplay" 
                                                  Text="45:00"
                                                  FontSize="72" 
                                                  FontWeight="Thin"
                                                  Foreground="#FFD700" 
                                                  HorizontalAlignment="Center"/>
                                        <TextBlock Text="minutes" 
                                                  Foreground="#888888"
                                                  FontSize="14"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#1A1A1A" 
                                        CornerRadius="10" 
                                        Padding="20" 
                                        Margin="0,0,0,20">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Duration:" 
                                                  Foreground="#CCCCCC" 
                                                  FontSize="14"
                                                  FontWeight="SemiBold"
                                                  VerticalAlignment="Center"/>
                                        <ComboBox x:Name="cmbMinutes" 
                                                  Style="{StaticResource DurationComboBox}"
                                                  Margin="15,0,0,0"
                                                  SelectedIndex="2">
                                            <ComboBoxItem Content="15" Foreground="White"/>
                                            <ComboBoxItem Content="30" Foreground="White"/>
                                            <ComboBoxItem Content="45" Foreground="White"/>
                                            <ComboBoxItem Content="60" Foreground="White"/>
                                            <ComboBoxItem Content="90" Foreground="White"/>
                                            <ComboBoxItem Content="120" Foreground="White"/>
                                        </ComboBox>
                                        <TextBlock Text="min" 
                                                  Foreground="#888888"
                                                  FontSize="14"
                                                  FontWeight="SemiBold"
                                                  VerticalAlignment="Center" 
                                                  Margin="10,0,0,0"/>
                                    </StackPanel>
                                </Border>
                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center" 
                                            Margin="0,0,0,20">
                                    <Button x:Name="btnStartTimer" 
                                            Content="START"
                                            Style="{StaticResource AccentSimpleButton}"
                                            Width="120" Height="45"
                                            FontSize="14"
                                            Click="StartTimer_Click"/>
                                    <Button x:Name="btnPauseTimer" 
                                            Content="PAUSE"
                                            Background="#20FFFFFF"
                                            Foreground="White"
                                            BorderBrush="#40FFFFFF"
                                            BorderThickness="1"
                                            Width="100" Height="45"
                                            FontSize="14"
                                            Margin="10,0,0,0"
                                            Visibility="Collapsed"
                                            Click="PauseTimer_Click"/>
                                    <Button x:Name="btnStopTimer" 
                                            Content="STOP"
                                            Background="Transparent"
                                            BorderBrush="#FF6B6B"
                                            BorderThickness="1.5"
                                            Foreground="#FF6B6B"
                                            Width="100" Height="45"
                                            FontSize="14"
                                            Margin="10,0,0,0"
                                            Visibility="Collapsed"
                                            Click="StopTimer_Click"/>
                                </StackPanel>
                                <Border Background="#1A1A1A" 
                                        CornerRadius="10" 
                                        Padding="20" 
                                        Margin="0,0,0,20">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="â˜•" FontSize="20" Foreground="#FFD700" Margin="0,0,10,0"/>
                                            <TextBlock Text="BREAK TIME" Foreground="#888888" FontSize="12" FontWeight="Bold" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                                            <TextBlock Text="15" FontSize="32" FontWeight="Bold" Foreground="#FFD700"/>
                                            <TextBlock Text="min" FontSize="13" Foreground="#CCCCCC" Margin="5,0,20,5" VerticalAlignment="Bottom"/>
                                            <Button x:Name="btnTakeBreak" 
                                                    Content="START"
                                                    Width="100" Height="40"
                                                    Background="#FFD700"
                                                    Foreground="#0A0A0A"
                                                    FontWeight="Bold"
                                                    Click="TakeBreak_Click"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                                <Border Background="#1A1A1A" 
                                        CornerRadius="10" 
                                        Padding="20">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ”— LINK TO TASK" 
                                                   Foreground="#FFD700"
                                                   FontSize="12" 
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,15"/>
                                        <ComboBox x:Name="cmbTasks" 
                                                  Style="{StaticResource LinkTaskComboBox}"
                                                  HorizontalAlignment="Center"
                                                  DisplayMemberPath="Title"
                                                  SelectedValuePath="Id"
                                                  MinWidth="300"
                                                  Foreground="White"/>
                                        <TextBlock Text="optional" 
                                                  Foreground="#888888"
                                                  FontSize="11"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,10,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Top" 
                       Margin="5"
                       Panel.ZIndex="1000">
                <Button Content="â€”" Width="35" Height="35"
                        Background="Transparent" Foreground="#888888"
                        FontSize="18" BorderThickness="0"
                        Click="MinimizeWindow_Click"/>
                <Button Content="â–¡" Width="35" Height="35"
                        Background="Transparent" Foreground="#888888"
                        FontSize="14" BorderThickness="0"
                        Margin="5,0" Click="MaximizeWindow_Click"/>
                <Button Content="Ã—" Width="35" Height="35"
                        Background="Transparent" Foreground="#FF6B6B"
                        FontSize="18" BorderThickness="0"
                        Click="CloseWindow_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>