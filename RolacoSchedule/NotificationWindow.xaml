<Window x:Class="RolacoSchedule.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rolaco Schedule" 
        Height="280" Width="480"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent" 
        WindowStartupLocation="CenterScreen"
        Topmost="True">

    <Window.Resources>
        <Color x:Key="PrimaryDark">#0A0A0A</Color>
        <Color x:Key="SecondaryDark">#141414</Color>
        <Color x:Key="AccentGold">#FFD700</Color>
        <Color x:Key="AccentGoldLight">#FFE55C</Color>
        <Color x:Key="ErrorRed">#FF6B6B</Color>

        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentGold}"/>
        <SolidColorBrush x:Key="AccentLightBrush" Color="{StaticResource AccentGoldLight}"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorRed}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="#888888"/>

        <Style x:Key="NotificationButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE55C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="10"
            Background="#0A0A0A"
            BorderBrush="#2A2A2A"
            BorderThickness="1">

        <Border.Effect>
            <DropShadowEffect Color="Black" 
                            Direction="270" 
                            ShadowDepth="5" 
                            BlurRadius="15" 
                            Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20">

                <TextBlock Text="TIME'S UP!" 
                          FontSize="24" 
                          FontWeight="SemiBold"
                          Foreground="{StaticResource AccentBrush}" 
                          HorizontalAlignment="Center"
                          Margin="0,10,0,0"/>

                <Border Height="2" 
                        Width="50" 
                        Background="{StaticResource AccentBrush}" 
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="1" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center">

                <TextBlock x:Name="txtSessionTitle"
                          Text="Your session has ended!"
                          Foreground="{StaticResource TextPrimaryBrush}"
                          FontSize="18"
                          FontWeight="Normal"
                          TextWrapping="Wrap"
                          TextAlignment="Center" Height="1"/>

                <TextBlock x:Name="txtTaskInfo"
                          Text="Great work! Time for a break?"
                          Foreground="{StaticResource TextSecondaryBrush}"
                          FontSize="14"
                          Margin="0,10,0,0"
                          HorizontalAlignment="Center"
                          TextWrapping="Wrap"
                          TextAlignment="Center" Width="298" Height="29"/>
            </StackPanel>

            <Border Grid.Row="2"
                    Background="#1A1A1A"
                    CornerRadius="8"
                    Padding="15,10"
                    Margin="0,20,0,20"
                    HorizontalAlignment="Center"
                    BorderBrush="{StaticResource AccentBrush}"
                    BorderThickness="0,0,0,2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⏱️" 
                              Foreground="{StaticResource AccentBrush}"
                              FontSize="14"
                              Margin="0,0,10,0"/>
                    <TextBlock x:Name="txtDuration"
                              Text="Session completed"
                              Foreground="{StaticResource TextSecondaryBrush}"
                              FontSize="12"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="3" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0">

                <Button x:Name="btnTakeBreak"
                        Content="☕ TAKE BREAK"
                        Style="{StaticResource NotificationButton}"
                        Background="{StaticResource AccentBrush}"
                        Foreground="#0A0A0A"
                        Width="130"
                        Margin="0,0,10,0"
                        Click="TakeBreak_Click"/>

                <Button x:Name="btnDismiss"
                        Content="✕ DISMISS"
                        Style="{StaticResource NotificationButton}"
                        Background="Transparent"
                        BorderBrush="#2A2A2A"
                        BorderThickness="1"
                        Foreground="{StaticResource TextSecondaryBrush}"
                        Width="130"
                        Click="Dismiss_Click"/>
            </StackPanel>

            <Button Grid.Row="0"
                    Content="×"
                    Width="30"
                    Height="30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,-5,-5,0"
                    Background="Transparent"
                    Foreground="{StaticResource ErrorBrush}"
                    FontSize="20"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Close_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="Transparent">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#FF8B8B"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>